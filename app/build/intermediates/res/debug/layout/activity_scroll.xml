<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.scrollableviewsandfragments.ScrollActivity">

    <TextView
        android:id="@+id/text_view"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/hello_world"
        android:layout_gravity="center"
        android:textSize="@dimen/text_size"/>

    <fragment
        android:id="@+id/static_fragment_1"
        android:name="com.scrollableviewsandfragments.ScrollActivity$StaticFragment1"
        android:tag="@string/static_fragment_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="1"

    />

    <fragment
        android:id="@+id/static_fragment_2"
        android:name="com.scrollableviewsandfragments.ScrollActivity$StaticFragment2"
        android:tag="@string/static_fragment_2"
        android:layout_below="@id/static_fragment_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
    />

    <fragment
        android:id="@+id/static_fragment_3"
        android:name="com.scrollableviewsandfragments.ScrollActivity$StaticFragment3"
        android:tag="@string/static_fragment_3"
        android:layout_below="@id/static_fragment_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
    />

</LinearLayout>
